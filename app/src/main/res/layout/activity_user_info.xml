<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/resturantbg2"
    tools:context="android.dgaps.com.resturantapp.UserInfo">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:alpha=".75"></RelativeLayout>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/et_username"
        android:hint="Name"
        android:background="@drawable/edittext_style"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/edittext_style"
        android:layout_marginTop="40dp"
        android:id="@+id/et_useraddress"
        android:hint="Address"
        android:layout_below="@+id/et_username"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/edittext_style"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/et_useraddress"
        android:layout_alignRight="@+id/et_useraddress"
        android:layout_alignEnd="@+id/et_useraddress"
        android:layout_marginTop="42dp"
        android:id="@+id/et_userphone"
        android:hint="Phone" />

    <Button
        android:text="Place order"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_userphone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_placeorder"
        android:background="@color/colorPrimary"/>

</RelativeLayout>
